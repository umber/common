{
  "name": "umber/common",
  "description": "Umber Common",
  "type": "library",
  "license": "MIT",

  "authors": [
    { "name": "Matthew Rose", "email": "matt.usurp@gmail.com" }
  ],

  "require": {
    "php": ">=7.1",
    "ext-json": "*",

    "umber/database": "^0.3",
    "umber/date": "^0.3",
    "umber/http": "^0.3",
    "umber/prototype": "^0.3",
    "umber/reducer": "^0.3"
  },

  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "symfony/form": "~3.4 | ~4.0",
    "symfony/http-foundation": "~3.4 | ~4.0",
    "symfony/validator": "~3.4 | ~4.0"
  },

  "autoload": {
    "psr-4": {
      "Umber\\Common\\": "src/Umber/Common",
      "Umber\\Common\\Tests\\": "tests/Umber/Common/Tests"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-develop": "0.1-dev"
    }
  },

  "archive": {
    "exclude": [
      "!vendor",
      "*phpunit.xml",
      ".travis.yml"
    ]
  }
}
